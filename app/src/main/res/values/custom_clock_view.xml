<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ClockView">
        <attr name="hourValue" format="integer" />
        <attr name="minuteValue" format="integer" />
        <attr name="secondsValue" format="integer" />
        <attr name="clockRadius" format="dimension" />
        <attr name="clockNumberTextColor" format="color" />
        <attr name="clockStrokeColor" format="color" />
        <attr name="clockArrowColor" format="color" />
        <attr name="clockBackgroundColor" format="color" />
    </declare-styleable>

    <attr name="clockViewStyle" format="reference" />

    <style name="ClockViewStyle">
        <item name="clockStrokeColor">@color/black</item>
        <item name="clockArrowColor">@color/orange</item>
        <item name="clockNumberTextColor">@color/black</item>
        <item name="clockBackgroundColor">@color/gray</item>
        <item name="clockRadius">60dp</item>
        <item name="hourValue">0</item>
        <item name="minuteValue">30</item>
        <item name="secondsValue">45</item>
    </style>
</resources>